extends ./../layout
block content
    main.mdl-layout__content.mdl-color--grey-100
        if (errors.length > 0)
            p= errors 
        .container_demo
            section
                #wrapper
                    #login.animate.form
                        form(action='', autocomplete='on', method='post')
                            h1  Sign up 
                            p
                                label.uname(for='usernamesignup', data-icon='u') Your username
                                input#usernamesignup(name='nom', required='required', type='text', placeholder='myusername')
                            p
                                label.uname(for='usernamesignup', data-icon='u') Your firstname
                                input#usernamesignup(name='firstname', required='required', type='text', placeholder='myfirstname')
                            p
                                label.uname(for='usernamesignup', data-icon='u') Your scondename
                                input#usernamesignup(name='secondename', required='required', type='text', placeholder='myscondename')
                            p
                                label.uname(for='usernamesignup', data-icon='u') Prefirence
                                input#usernamesignup(name='prefirence', required='required', type='text', placeholder='Prefirence')
                            p
                                label.youmail(for='emailsignup', data-icon='e')  Your email
                                input#emailsignup(name='email', required='required', type='email', placeholder='myemail@mail.com')
                            p
                                label.uname(for='usernamesignup', data-icon='u') Sex
                                input#usernamesignup(name='sex', required='required', type='text', placeholder='sex')
                            p
                                label.uname(for='usernamesignup', data-icon='u') Age
                                input#usernamesignup(name='age', required='required', type='number', placeholder='age')
                            p
                                label.uname(for='usernamesignup', data-icon='u') Adress
                                input#usernamesignup(name='adress', required='required', type='text', placeholder='adress')
                            p
                                label.uname(for='usernamesignup', data-icon='u') Avatar
                                input#usernamesignup(name='avatar', type='file', placeholder='')
                            p
                                label.youpasswd(for='passwordsignup', data-icon='p') Your password 
                                input#passwordsignup(name='password', required='required', type='password', placeholder='eg. X8df!90EO')
                            p
                                label.youpasswd(for='passwordsignup_confirm', data-icon='p') Please confirm your password 
                                input#passwordsignup_confirm(name='password1', required='required', type='password', placeholder='eg. X8df!90EO')
                            p
                                label.uname(for='usernamesignup') Presintation
                                p
                                    textarea#usernamesignup(rows='4', cols='70', name='presintation')

                            p.signin.button
                                input(type='submit', value='Sign up')
                            p.change_link
                                | Already a member ?
                                a.to_register(href='/login')  Go and log in 
                                    

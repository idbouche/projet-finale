extends ./../layout

block content
    main.mdl-layout__content.mdl-color--grey-100
        if (message)
            p= message 
        .container
            section
                #container_demo
                    #wrapper
                        #login.animate.form
                            form(method= 'post')
                                h1 Reset Password
                                p
                                    label.uname(for='username', data-icon='e')  Your email 
                                    input#username(name='email', required='required', type='text', placeholder='exempl@mail.com')
                               
                                p.login.button
                                    input(type='submit', value='Login')